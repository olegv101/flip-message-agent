# =============================================================================
# Blue Messages - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# OpenAI Configuration (REQUIRED)
# =============================================================================

# Your OpenAI API key - REQUIRED for AI functionality
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AI model to use for conversations
# Options: gpt-4o-mini, gpt-4, gpt-3.5-turbo, etc.
# Default: gpt-4o-mini
AI_MODEL=gpt-4o-mini

# =============================================================================
# AI Behavior Configuration
# =============================================================================

# Enable or disable AI responses
# Set to 'false' to disable AI functionality
# Default: true (enabled)
AI_ENABLED=true

# Enable debug mode for detailed logging
# Set to 'true' for verbose debugging output
# Default: false
DEBUG_MODE=false

# Comma-separated list of phone numbers allowed to trigger AI
# Leave empty to allow all numbers
# Example: +1234567890,+1987654321
AI_WHITELIST=

# Comma-separated list of phone numbers blocked from triggering AI
# Example: +1111111111,+2222222222
AI_BLACKLIST=

# =============================================================================
# MongoDB Configuration (for persistent conversations)
# =============================================================================

# MongoDB connection string
# Local: mongodb://localhost:27017
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/
# Default: mongodb://localhost:27017
MONGO_URL=mongodb://localhost:27017

# MongoDB database name
# Default: connectus_chats
MONGO_DB_NAME=connectus_chats

# MongoDB collection name for storing chats
# Default: chats
MONGO_COLLECTION_NAME=chats

# =============================================================================
# Storage Configuration
# =============================================================================

# Type of conversation storage to use
# Options: 'memory' (temporary), 'mongodb' (persistent)
# Default: memory
CONVERSATION_STORE_TYPE=memory

# =============================================================================
# Server Configuration
# =============================================================================

# Port for the web server
# Default: 5173
PORT=5173